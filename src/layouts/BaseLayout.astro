---
import SEO from '../components/SEO.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  article?: boolean;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  category?: string;
  readTime?: string;
}

const { 
  title, 
  description = "Platform e-learning dan blog edukasi terpercaya", 
  image = "/og-image.jpg", 
  canonical,
  article = false,
  author,
  publishedTime,
  modifiedTime,
  tags = [],
  category,
  readTime
} = Astro.props;
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Component with comprehensive meta tags and schema markup -->
    <SEO 
      title={`${title} | Cuandemy`}
      description={description}
      image={image}
      canonical={canonical}
      article={article}
      author={author}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      tags={tags}
      category={category}
      readTime={readTime}
    />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:wght@300;400;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    
    <!-- Partytown for third-party scripts -->
    <script type="text/partytown">
      // Google Analytics
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'GA_MEASUREMENT_ID');
    </script>
  </head>
  <body class="bg-white text-secondary-800 font-sans antialiased">
    <div class="min-h-screen flex flex-col">
      <slot />
    </div>
    
    <!-- Scripts -->
    <script>
      // Theme toggle and other interactive features
      document.addEventListener('DOMContentLoaded', function() {
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e: Event) {
            e.preventDefault();
            const element = e.currentTarget as HTMLAnchorElement;
            const href = element.getAttribute('href');
            if (href) {
              const target = document.querySelector(href);
              if (target) {
                target.scrollIntoView({
                  behavior: 'smooth',
                  block: 'start'
                });
              }
            }
          });
        });
      });
    </script>
  </body>
</html>
